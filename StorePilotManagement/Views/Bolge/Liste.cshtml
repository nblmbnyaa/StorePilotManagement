@using StorePilotManagement.ViewModels
@model List<BolgeViewModel>
@{
    ViewData["Title"] = "Bölgeler";
}

@if (TempData["BasariMesaji"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["BasariMesaji"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["HataMesaji"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["HataMesaji"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@section Scripts {
    <script>
        setTimeout(function () {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                bsAlert.close();
            });
        }, 4000);
    </script>
}

<h2>Bölgeler</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bolge in Model)
        {
            <tr>
                <td>@bolge.Adi</td>
                <td>
                    @if (bolge.PasifMi)
                    {
                        <span class="text-danger">Pasif</span>
                    }
                    else
                    {
                        <span class="text-success">Aktif</span>
                    }
                </td>
                <td>
                    <a asp-action="Duzenle" asp-route-Uuid="@bolge.Uuid" class="btn btn-warning btn-sm me-2">Düzenle</a>
                    <form asp-action="DegistirDurum" asp-route-Uuid="@bolge.Uuid" method="post" class="d-inline">
                        <button type="submit" class="btn btn-secondary btn-sm">
                            @(bolge.PasifMi ? "Aktif Yap" : "Pasif Yap")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Ekle" class="btn btn-primary mb-3">Yeni Bölge</a>