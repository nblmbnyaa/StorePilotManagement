@model List<StorePilotManagement.ViewModels.StantTuruViewModel>

@{
    ViewData["Title"] = "Stant Türleri";
}

<h2>Stant Türleri</h2>

@if (TempData["BasariMesaji"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["BasariMesaji"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["HataMesaji"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["HataMesaji"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<a asp-action="Ekle" class="btn btn-success mb-3">Yeni Stant Türü</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Ölçüler</th>
            <th>Durum</th>
            <th style="width: 150px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.PasifMi ? "table-danger" : "")">
                <td>@item.Adi</td>
                <td>@item.Olculer</td>
                <td>@(item.PasifMi ? "Pasif" : "Aktif")</td>
                <td>
                    <a asp-action="Duzenle" asp-route-uuid="@item.Uuid" class="btn btn-sm btn-warning me-1">Düzenle</a>
                    <form asp-action="DegistirDurum" asp-route-uuid="@item.Uuid" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm @(item.PasifMi ? "btn-success" : "btn-secondary")">
                            @(item.PasifMi ? "Aktif Yap" : "Pasif Yap")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        setTimeout(function () {
            document.querySelectorAll('.alert').forEach(function (alert) {
                bootstrap.Alert.getOrCreateInstance(alert).close();
            });
        }, 4000);
    </script>
}
