@model StorePilotManagement.ViewModels.StantTuruViewModel

@{
    ViewData["Title"] = "Stant Türü Ekle";
}

@if (TempData["BasariMesaji"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["BasariMesaji"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["HataMesaji"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["HataMesaji"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2>Yeni Stant Türü Ekle</h2>

<form asp-action="Ekle" method="post">
    <div class="form-group">
        <label>Adı</label>
        <input asp-for="Adi" class="form-control" />
        <span asp-validation-for="Adi" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Ölçüler</label>
        <input asp-for="Olculer" class="form-control" />
        <span asp-validation-for="Olculer" class="text-danger"></span>
    </div>

    <div class="form-check mt-3">
        <input asp-for="PasifMi" class="form-check-input" />
        <label asp-for="PasifMi" class="form-check-label">Pasif</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
    <a asp-action="Liste" class="btn btn-secondary mt-3">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        setTimeout(function () {
            document.querySelectorAll('.alert').forEach(function (alert) {
                bootstrap.Alert.getOrCreateInstance(alert).close();
            });
        }, 4000);
    </script>
}
