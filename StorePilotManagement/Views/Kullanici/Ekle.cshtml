@using StorePilotManagement.ViewModels
@model KullaniciViewModel

<h2>Kullanıcı Ekle</h2>

<form asp-action="Ekle" method="post">
    <div class="form-group">
        <label>Kod</label>
        <input asp-for="KullaniciAdi" class="form-control" />
        <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>İsim</label>
        <input asp-for="UzunAdi" class="form-control" />
        <span asp-validation-for="UzunAdi" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label>Şifre</label>
        <input asp-for="Sifre" type="password" class="form-control" />
        <span asp-validation-for="Sifre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Roller</label>
        <select asp-for="SecilenRoller" asp-items="Model.TumRoller" multiple class="form-control"></select>
        <span asp-validation-for="SecilenRoller" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Kaydet</button>
</form>