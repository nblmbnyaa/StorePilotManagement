@using StorePilotManagement.ViewModels
@model KullaniciViewModel

@if (TempData["BasariMesaji"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["BasariMesaji"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["HataMesaji"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["HataMesaji"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2>Kullanıcı Düzenle</h2>

<form asp-action="Duzenle" method="post">
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <input asp-for="KullaniciAdi" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Uzun Adı</label>
        <input asp-for="UzunAdi" class="form-control" />
        <span asp-validation-for="UzunAdi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Şifre (Değiştirmek için doldurun)</label>
        <input asp-for="Sifre" type="password" class="form-control" autocomplete="new-password" />
        <span asp-validation-for="Sifre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Cihaz Id</label>
        <input asp-for="CihazId" class="form-control" />
        <span asp-validation-for="CihazId" class="text-danger"></span>
    </div>

    <div class="form-group form-check mt-2">
        <input asp-for="PasifMi" class="form-check-input" />
        <label asp-for="PasifMi" class="form-check-label">Pasif</label>
    </div>

    <div class="form-group mt-3">
        <label>Roller</label>
        <select asp-for="SecilenRoller" asp-items="Model.TumRoller" multiple class="form-control"></select>
        <span asp-validation-for="SecilenRoller" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
    <a asp-action="Liste" class="btn btn-secondary mt-3">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        setTimeout(function () {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                bsAlert.close();
            });
        }, 4000);
    </script>
    
}
