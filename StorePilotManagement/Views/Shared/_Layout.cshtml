<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - StorePilotManagement</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StorePilotManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .wrapper {
            flex: 1 0 auto;
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .sidebar {
            width: 250px;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
            overflow-y: auto;
            padding: 1rem;
        }

        .content {
            flex-grow: 1;
            overflow-y: auto;
            padding: 1rem 2rem;
        }

        footer {
            flex-shrink: 0;
        }
    </style>
</head>
<body>
    <header class="border-bottom bg-white shadow-sm">
        <nav class="navbar navbar-expand navbar-light container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StorePilotManagement</a>
        </nav>
    </header>

    <div class="wrapper">
        <nav class="sidebar">
            <div class="accordion" id="menuAccordion">

                <!-- Genel Tanımlamalar -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingGenel">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseGenel" aria-expanded="false" aria-controls="collapseGenel">
                            Genel Tanımlamalar
                        </button>
                    </h2>
                    <div id="collapseGenel" class="accordion-collapse collapse" aria-labelledby="headingGenel" data-bs-parent="#menuAccordion">
                        <div class="accordion-body p-0">
                            <ul class="nav flex-column">
                                <li class="nav-item"><a class="nav-link" asp-controller="Kullanici" asp-action="Liste">Kullanıcılar</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Rol" asp-action="Liste">Roller</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Bolge" asp-action="Liste">Bölgeler</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="DolapTuru" asp-action="Liste">Dolap Türleri</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="StantTuru" asp-action="Liste">Stant Türleri</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="MagazaKategori" asp-action="Liste">Mağaza Kategorileri</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Mağaza İşlemleri -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingMagaza">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseMagaza" aria-expanded="false" aria-controls="collapseMagaza">
                            Mağaza İşlemleri
                        </button>
                    </h2>
                    <div id="collapseMagaza" class="accordion-collapse collapse" aria-labelledby="headingMagaza" data-bs-parent="#menuAccordion">
                        <div class="accordion-body p-0">
                            <ul class="nav flex-column">
                                <li class="nav-item"><a class="nav-link" asp-controller="Magaza" asp-action="Liste">Mağaza Tanımları</a></li>
                                @* <li class="nav-item"><a class="nav-link" asp-controller="StantIslem" asp-action="Liste">Stant İşlemleri</a></li> *@
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Ziyaret İşlemler -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingZiyaret">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseZiyaret" aria-expanded="false" aria-controls="collapseZiyaret">
                            Ziyaret İşlemleri
                        </button>
                    </h2>
                    <div id="collapseZiyaret" class="accordion-collapse collapse" aria-labelledby="headingZiyaret" data-bs-parent="#menuAccordion">
                        <div class="accordion-body p-0">
                            <ul class="nav flex-column">
                                <li class="nav-item"><a class="nav-link" asp-controller="GorevTanim" asp-action="Liste">Görev Tanımları</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="ZiyaretPlani" asp-action="Liste">Ziyaret İşlemleri</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Raporlar -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingRaporlar">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseRaporlar" aria-expanded="false" aria-controls="collapseRaporlar">
                            Raporlar
                        </button>
                    </h2>
                    <div id="collapseRaporlar" class="accordion-collapse collapse" aria-labelledby="headingRaporlar" data-bs-parent="#menuAccordion">
                        <div class="accordion-body p-0">
                            <ul class="nav flex-column">
                                @* <li class="nav-item"><a class="nav-link" asp-controller="StantIslem" asp-action="Liste">Stant İşlemleri</a></li> *@
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <main class="content">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - StorePilotManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
