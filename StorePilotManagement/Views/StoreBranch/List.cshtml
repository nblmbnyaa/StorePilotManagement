@using StorePilotManagement.ViewModels
@model List<StoreBranchViewModel>

@{
    ViewData["Title"] = "Mağaza Listesi";
}

<h2>Mağaza Listesi</h2>

@if (TempData["BasariMesaji"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["BasariMesaji"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["HataMesaji"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["HataMesaji"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}



<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Adı</th>
            <th>İl / İlçe</th>
            <th>VKN</th>
            <th>Yetkili</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BranchName</td>
                <td>@item.City / @item.District</td>
                <td>@item.BranchNo</td>
                <td>
                    @if (item.Contacts != null && item.Contacts.Count > 0)
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var y in item.Contacts)
                            {
                                <li>@y.FullName @if (y.IsMaster)
                                    {
                                        <strong>(Yetkili)</strong>
                                    }</li>
                            }
                        </ul>
                    }
                </td>
                <td>
                    @if (item.IsPassive)
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-uuid="@item.Uuid" class="btn btn-sm btn-warning">Düzenle</a>
                    <form asp-action="ChangeState" method="post" asp-route-uuid="@item.Uuid" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-secondary">Aktif/Pasif</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary mb-3">Yeni Mağaza Ekle</a>

@section Scripts {
    <script>
        setTimeout(function () {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                bsAlert.close();
            });
        }, 4000);
    </script>
}
