@using StorePilotManagement.ViewModels
@model List<RolViewModel>

<h2>Roller</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@(item.PasifMi ? "Pasif" : "Aktif")</td>
                <td>
                    <a asp-action="Duzenle" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">Düzenle</a>

                    <form asp-action="DegistirDurum" asp-route-id="@item.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm @(item.PasifMi ? "btn-success" : "btn-secondary")">
                            @(item.PasifMi ? "Aktif Yap" : "Pasif Yap")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="Ekle">Yeni Rol Ekle</a>
