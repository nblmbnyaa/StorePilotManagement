@using StorePilotManagement.ViewModels
@model UserViewModel

@if (TempData["BasariMesaji"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["BasariMesaji"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["HataMesaji"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["HataMesaji"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2>Kullanıcı Düzenle</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <input asp-for="UserName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Uzun Adı</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Şifre (Değiştirmek için doldurun)</label>
        <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Cihaz Id</label>
        <input asp-for="DeviceId" class="form-control" />
        <span asp-validation-for="DeviceId" class="text-danger"></span>
    </div>

    <div class="form-group form-check mt-2">
        <input asp-for="IsPassive" class="form-check-input" />
        <label asp-for="IsPassive" class="form-check-label">Pasif</label>
    </div>

    <div class="form-group">
        <label>Kullanıcı Tipi</label>
        <select asp-for="UserType" asp-items="Model.AllTypes" class="form-control"></select>
        <span asp-validation-for="UserType" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label>Roller</label>
        <select asp-for="SelectedRoles" asp-items="Model.AllRoles" multiple class="form-control"></select>
        <span asp-validation-for="SelectedRoles" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
    <a asp-action="List" class="btn btn-secondary mt-3">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        setTimeout(function () {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                bsAlert.close();
            });
        }, 4000);
    </script>
    
}
