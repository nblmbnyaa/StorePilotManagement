@{
    ViewData["Title"] = "StorePilot Giriş";
}

<div class="container mt-5" style="max-width: 500px;">
    @if (TempData["BasariMesaji"] != null)
    {
        <div class="alert alert-success">@TempData["BasariMesaji"]</div>
    }

    @if (TempData["HataMesaji"] != null)
    {
        <div class="alert alert-danger">@TempData["HataMesaji"]</div>
    }

    <div class="text-center mb-4">
        <img src="~/images/store-pilot-logo.png" alt="StorePilot Logo" style="max-height: 200px;" />
        <h2 class="mt-3">StorePilot</h2>
        <p class="text-muted">Saha Operasyon Yönetim Sistemi</p>
    </div>

    
</div>
