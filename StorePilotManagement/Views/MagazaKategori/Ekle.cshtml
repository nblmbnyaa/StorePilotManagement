@model StorePilotManagement.ViewModels.MagazaKategoriViewModel

@{
    ViewData["Title"] = "Kategori Ekle";
}

@if (TempData["BasariMesaji"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["BasariMesaji"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["HataMesaji"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["HataMesaji"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2>Kategori Ekle</h2>

<form asp-action="Ekle" method="post">
    <div class="form-group mb-2">
        <label>Kategori Adı</label>
        <input asp-for="Adi" class="form-control" />
        <span asp-validation-for="Adi" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="PasifMi" class="form-check-input" />
        <label asp-for="PasifMi" class="form-check-label">Pasif</label>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Liste" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        setTimeout(function () {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                bsAlert.close();
            });
        }, 4000);
    </script>
}
